<div class="circle ideas">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Quality</th>
      </tr>
    </thead>
    <tbody>
      <% @ideas.all.each do |idea| %>
        <tr data-id="idea_<%= idea.id %>">
          <td><%= idea.title %></td>
          <td><%= limit_body(idea.body) %></td>
          <td><%= idea.quality %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
